# =============================================================================
#  NeuroTidy - Configuration Template
#  Copy this as config.env and fill in your values
# =============================================================================

# AWS Credentials
AWS_ACCESS_KEY_ID=<YOUR_AWS_ACCESS_KEY_ID>
AWS_SECRET_ACCESS_KEY=<YOUR_AWS_SECRET_ACCESS_KEY>
AWS_SESSION_TOKEN=<OPTIONAL_SESSION_TOKEN>
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=<YOUR_12_DIGIT_ACCOUNT_ID>

# Bedrock Model (pick one - see config.env for full list)
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_MAX_TOKENS=2000
BEDROCK_TEMPERATURE=0.1
BEDROCK_TOP_P=0.9

# Infrastructure Names
STACK_NAME=neurotidy-stack
S3_BUCKET_SUFFIX=results
DYNAMODB_TABLE=neurotidy-cache
LAMBDA_FUNCTION_NAME=neurotidy-analyzer
API_GATEWAY_NAME=neurotidy-api
API_STAGE=prod

# Cache
CACHE_TTL_SECONDS=86400
S3_EXPIRY_DAYS=30

# GitHub Integration (optional)
GITHUB_TOKEN=
GITHUB_REPO=
GITHUB_WEBHOOK_SECRET=

# Local Dev
NEUROTIDY_API_ENDPOINT=
LOCAL_MOCK_MODE=false
LOG_LEVEL=INFO
